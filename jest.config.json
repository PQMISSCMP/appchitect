{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch" : [
    "test/*.+(ts|js)"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "transformIgnorePatterns": ["/node_modules/"],
  "transform": {
    "^.+\\.(ts|js)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.json"
    }
  }
}